{
  "name": "webmention-hosted",
  "description": "A site that receives and embeds WebMentions for other sites",
  "version": "0.12.5",
  "author": {
    "name": "Pelle Wessman",
    "email": "pelle@kodfabrik.se",
    "url": "http://kodfabrik.se/"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@voxpelli/metadataparser": "^2.0.0",
    "@voxpelli/metadataparser-mf2": "^0.3.0",
    "@voxpelli/passport-dummy": "^1.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.5.2",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "faker": "^2.1.1",
    "fetch-politely": "^2.0.0-1",
    "knex": "^0.15.2",
    "knex-migrator-extension": "^0.1.4",
    "lodash.clonedeep": "^4.5.0",
    "lodash.escape": "^4.0.1",
    "lodash.intersection": "^4.4.0",
    "lodash.isempty": "^4.4.0",
    "lodash.isplainobject": "^4.0.6",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "lodash.union": "^4.6.0",
    "lodash.uniq": "^4.5.0",
    "lodash.values": "^4.3.0",
    "moment": "^2.22.2",
    "newrelic": "^4.8.0",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "pg": "^7.4.3",
    "pg-pubsub": "^0.4.0",
    "request": "^2.86.0",
    "tema": "^0.3.0",
    "verror": "^1.10.0"
  },
  "main": "./lib/main",
  "directories": {
    "lib": "./lib"
  },
  "scripts": {
    "start": "node .",
    "mocha": "NODE_ENV=test DOTENV_FILE=test/test.env nyc --reporter=lcov --reporter text mocha --exit test/**/*.spec.js",
    "mocha-functional": "NODE_ENV=test DOTENV_FILE=test/test.env nyc --reporter=lcov --reporter text mocha --exit test/functional/**/*.spec.js",
    "mocha-unit": "NODE_ENV=test DOTENV_FILE=test/test.env nyc --reporter=lcov --reporter text mocha test/unit/**/*.spec.js",
    "dependency-check": "JS_FILES=\"*.js lib/*/*.js lib/*.js migrations/*.js test/*/*.js test/*.js\" && dependency-check . $JS_FILES && dependency-check . $JS_FILES --no-dev --unused -i pg",
    "test": "concurrently -r 'eslint .' 'installed-check -n -e -i newrelic' 'npm run --silent dependency-check' 'npm run --silent mocha'",
    "build": "node -e \"require('grunt').tasks(['build']);\"",
    "build-dev": "node -e \"require('grunt').tasks(['build-dev']);\"",
    "install-schema": "knex-migrator-extension migrate:install",
    "migrate-schema": "knex-migrator-extension migrate:latest",
    "rollback-schema": "knex-migrator-extension migrate:rollback"
  },
  "private": true,
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^4.0.1",
    "coveralls": "^3.0.2",
    "dependency-check": "^3.2.0",
    "dotenv": "^6.0.0",
    "eslint": "^4.19.1",
    "eslint-config-semistandard": "^12.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-plugin-unicorn": "^4.0.0",
    "grunt": "^1.0.2",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-uglify": "^1.0.2",
    "installed-check": "^2.2.0",
    "mocha": "^5.2.0",
    "nock": "^9.6.1",
    "nyc": "^13.0.0",
    "sinon": "^6.1.5",
    "supertest": "^3.1.0",
    "webmention-testpinger": "^0.6.1"
  }
}
